    void Draginse()
    {
      int hr=ginse;
      if (Pureya==1)
    {
      fill(#211613);
      ellipse(10,10,hr*10,40);
     
    }
    if (Pureya ==2)
    {
    fill(#211613);
    ellipse(xginse, yginse, hr*10, 40);
    
    }
   }
   
   void attakuone(){
    int y=(int)random(110);
    int r=(int)random(100);
   
     int hit=15;
     int hatta=(int)random(100);
     if(hatta>=0 && hatta<=25) hit=(int)(1.3*hit);
     
     if(Pureya ==1){
      fill(#A2F7F5);
     ellipse(xattaku-600, 40, r,r);
     xattaku = xattaku+5;
     if (xattaku==800)
      {
       xginse = xginse+ hit*8;
       CHEYENNE.ginse=CHEYENNE.ginse-hit;
       xattaku=0;
       shifuto=2;
       key=0;
      }
    }
    
    if(Pureya==2)
    {
    fill(#A2F7F5);
    ellipse(xattaku, 40,r,r);
    xattaku=xattaku-5;
    if(xattaku==-800)
    {
    key=0;
    shifuto=1;
    JEEP.ginse = JEEP.ginse-hit;
    xattaku = 0;
    }
   }
  }
  
  void attakutwo(){
    int y=(int)random(10);
    int e=(int)random(30);
 
   int hit =9;
   int hatta= 100;
   if(hatta>=0 && hatta<=20) hit =(int)(1.3*hit);
  

  if(Pureya ==1)
  {
   fill(#0D1717);
  ellipse(xattaku-800, 40+y, e+30, e);
  xattaku=xattaku+ 5;
  if(attaku==850)
  {
    key=0;
    shifuto=2;
    xginse=xginse + hit*3;
    JEEP.ginse=JEEP.ginse -hit;
    xattaku =0;
    }
  }
  
  if(Pureya == 2){  
    fill(1);
    ellipse(xattaku, 40-y,e+30,e);
    xattaku=xattaku-5;
    if(xattaku==-850)
    {
    key=0;
    shifuto=1;
    JEEP.ginse = JEEP.ginse-hit;
    xattaku = 0;
  
    }
   }
  
  }
  
}
   
 ///  
   void keyPressed()
 {
   if(sukurin ==1)
  {
    if(IDpersonaje>=0 && IDpersonaje<=5)
     {
       if(key == 'd')
     {
       if(IDpersonaje == 5) return;
       dx=dx+200;
       IDpersonaje = IDpersonaje+1;
       key=0;
     }
     if(key=='a')
     {
       if(IDpersonaje==0)return;
       dx=dx-200;
       IDpersonaje = IDpersonaje-1;
       key=0;
     }
     if(IDpersonaje==-1)
     { 
       if(key=='\n')
     {
       IDpersonaje1=IDpersonaje;
       IDpersonaje2 = -2;
       IDpersonaje =0;
       dx=0;
       dy=0;
       key=0;
     }
    }
    if(IDpersonaje2==-2)
     {   
      if(key=='\n')
      {
        IDpersonaje2= IDpersonaje;
        IDpersonaje=0;
        dx=0;
        dy=0;
        key=0;
        sukurin=2;
      }
     }
    }
  }
  if(sukurin==2)
  {
    if(CHEYENNE.ginse<=0 || JEEP.ginse<=0)
   {
     if(key=='r')
     {
       sukurin=0;
     }
   }
  }
 }

 
 
  
 
    
  
 
